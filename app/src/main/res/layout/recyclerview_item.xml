<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="itemList"
            type="com.example.cloverapplication.database.entity.UpdateItem" />
    </data>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(itemList.id)}"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@{itemList.orderId}"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@{itemList.itemId}"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@{itemList.correctOldPrice}"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@{itemList.correctNewPrice}"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_margin="5dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@{itemList.correctDate}"/>
    </LinearLayout>
</layout>